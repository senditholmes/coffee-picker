generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model cafes {
  cafe_id      Int       @id @default(autoincrement())
  name         String?   @db.VarChar(30)
  address      String?   @db.VarChar(30)
  address_link String?   @db.VarChar(200)
  opening_hour DateTime? @db.Time(0)
  closing_hour DateTime? @db.Time(0)
  ratings      ratings[]
}

model ratings {
  rating_id       Int       @id @default(autoincrement())
  cafe_id         Int
  taste           String?   @db.VarChar(30)
  atmosphere      String?   @db.VarChar(30)
  service         String?   @db.VarChar(30)
  americano_price Int?      @db.MediumInt
  cake_price      Int?      @db.MediumInt
  overall_score   Int?      @db.TinyInt
  visit_date      DateTime? @db.Date
  cafes           cafes     @relation(fields: [cafe_id], references: [cafe_id], onDelete: NoAction, onUpdate: NoAction, map: "ratings_ibfk_1")

  @@index([cafe_id], map: "cafe_id")
}
